<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_tracking_page" tools:context="com.tracker.tracker.ui.UI_TrackingPage"
    android:background="@drawable/background1">
    <Spinner
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/listButton"
        android:layout_marginTop="30dp"
        android:background="#f8f5f5"
        android:id="@+id/list"
        ></Spinner>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/listButton"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button1"
        android:layout_below="@+id/title"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Satellite"
        android:id="@+id/satellite"
        android:layout_marginTop="30dp"
        android:background="@drawable/button1"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/listButton"
        android:layout_marginLeft="50dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Normal"
        android:id="@+id/normal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button1"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/satellite"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back"
        android:width="40dp"
        android:background="@drawable/back"/>
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/search"
        android:width="40dp"
        android:layout_below="@+id/map"
        android:layout_marginTop="20dp"
        android:background="@drawable/search"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track"
        android:id="@+id/title"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#f8f5f5"/>
    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_below="@+id/listButton"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
